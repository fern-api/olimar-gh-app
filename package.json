{
  "name": "github-app-webhook-server",
  "version": "1.0.0",
  "description": "GitHub App webhook server that triggers dispatch workflows on merge events",
  "type": "module",
  "main": "dist/index.js",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "watch": "tsc --watch",
    "tunnel": "node scripts/tunnel.js",
    "docker:build": "docker build -t olimar-gh-app:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env olimar-gh-app:latest",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "db:migrate": "./scripts/db-migrate.sh up",
    "db:migrate:down": "./scripts/db-migrate.sh down",
    "db:migrate:status": "./scripts/db-migrate.sh status",
    "db:migrate:reset": "./scripts/db-migrate.sh reset",
    "db:migrate:create": "./scripts/db-create.sh",
    "db:psql": "docker-compose exec postgres psql -U ${DB_USER:-postgres} -d ${DB_NAME:-olimar}",
    "db:reset": "docker-compose down -v && docker-compose up -d postgres && sleep 5 && pnpm run db:migrate"
  },
  "keywords": [
    "github",
    "webhook",
    "octokit"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@octokit/webhooks": "^13.3.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "octokit": "^4.0.2",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.0",
    "localtunnel": "^2.0.2",
    "tsx": "^4.19.2",
    "typescript": "^5.5.2"
  }
}
