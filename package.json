{
  "name": "github-app-webhook-server",
  "version": "1.0.0",
  "description": "GitHub App webhook server that triggers dispatch workflows on merge events",
  "type": "module",
  "main": "dist/index.js",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm --filter @olimar/workflow-db run build && pnpm exec tsc",
    "build:app": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "watch": "tsc --watch",
    "tunnel": "node scripts/tunnel.js",
    "db:migrate": "pnpm --filter @olimar/workflow-db run migrate",
    "db:migrate:status": "pnpm --filter @olimar/workflow-db run migrate:status"
  },
  "keywords": [
    "github",
    "webhook",
    "octokit"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@octokit/webhooks": "^13.3.0",
    "@olimar/workflow-db": "workspace:*",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "octokit": "^4.0.2",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.0",
    "localtunnel": "^2.0.2",
    "tsx": "^4.19.2",
    "typescript": "^5.5.2"
  }
}
