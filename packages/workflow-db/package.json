{
  "name": "@olimar/workflow-db",
  "version": "1.0.0",
  "description": "PostgreSQL database module for tracking GitHub Actions workflow runs",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "watch": "tsc --watch",
    "migrate": "tsx scripts/migrate.ts run",
    "migrate:status": "tsx scripts/migrate.ts status"
  },
  "keywords": [
    "postgresql",
    "github-actions",
    "workflow",
    "database"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "pg": "^8.16.3",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5",
    "dotenv": "^16.4.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
